<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android">
    <item>
        <shape android:shape="rectangle">
            <solid android:color="@android:color/transparent" /> <!-- Set the background color of the spinner -->
            <stroke
                android:width="1dp"
                android:color="@color/not_active_icon" /> <!-- Set the border color and width of the spinner -->
            <corners android:radius="4dp" /> <!-- Set the corner radius to give a rounded appearance -->
        </shape>
    </item>
</layer-list>
